title: "ddoc (example of layout in columns)"
description: "Markdown based static site generator"
favicon: img/favicon.ico

site-map: {
    Overview: index.md
    Usage: {
        "Install ddoc": install.md
        "Setup your site": setup.md
        "Edit your site": edit.md
        "Configure it": config.md
    }
    Community: {
        "Get Help": dev.md
        Examples: examples.md
    }
}

body: {
    header: {
        ddoc-link.external-nav-link: {
            inline: img/dystroy-rust-white.svg
            href: https://dystroy.org
            alt: dystroy.org homepage
        }
        ddoc-link.home-link: {
            href: /index.md
            alt: ddoc homepage
            label: ddoc (columns layout)
        }
        ddoc-link.external-nav-link: {
            inline: img/github-mark.svg
            alt: GitHub
            href: https://github.com/Canop/ddoc/tree/main/website
        }
    }
    div.columns: {
        ddoc-menu: {
            hamburger-checkbox: true
        }
        div.center: {
            div.page-title: {
                ddoc-page-title: {}
            }
            ddoc-main: {}
            footer: {
                nav.made-with-ddoc: {
                    ddoc-link: {
                        label: made with
                    }
                    ddoc-link: {
                        label: ddoc
                        href: https://dystroy.org/ddoc
                        class: link-to-ddoc
                    }
                }
            }
        }
        ddoc-toc: {}
        aside.nav-icons: {
            ddoc-link.previous-page-link: {
                inline: img/ddoc-left-arrow.svg
                href: --previous
                alt: Previous Page
            }
            ddoc-link.search-opener: {
                inline: img/ddoc-search.svg
                href: --search
                alt: Search
            }
            ddoc-link.next-page-link: {
                inline: img/ddoc-right-arrow.svg
                href: --next
                alt: Next Page
            }
        }
    }
}
